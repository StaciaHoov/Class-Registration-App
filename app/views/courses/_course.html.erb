 <table id='courses' class="stripe order-column hover" cellspacing="0" width="100%">

    <thead>
      <tr>
        <th>Age group</th>
        <th>Time block</th>
        <th>Title</th>
        <th>Instructor</th>
        <th>Max students</th>
        <th>Openings</th>
        <th>Fee</th>
        <th>More Info</th>
      </tr>
    </thead>

    <tbody>
      <% courses.each do |course| %>
        <tr>
          <td><%= course.age_group %></td>
          <td><span class="rest-in-place" data-object="course" data-attribute="time_block" data-url="<%= "/courses/#{course.id}" %>" >
          <%= course.time_block %></span></td>
          <td><%= course.title %></td>
          <td><%= course.user.name %></td>
          <td><%= course.max_students %></td>
          <td><%= course.openings %></td>
          <td><%= number_to_currency(course.fee) %></td>
          <td><%= link_to 'Description ', course %></td>
        </tr>
      <% end %>
    </tbody>

</table>
 
  
