<p id="notice"><%= notice %></p>
<div class='panel panel-default'>
  <div class='panel-heading'>
    <p>
      <h2>Title:  <%= @course.title %></h2>
    </p>
  </div>
  
  <div class='panel-body'>
    <p>
      <strong>Instructor:</strong>
      <%= @course.user.name %>
    </p>
    
    <p>
      <strong>Description:</strong>
      <%= @course.description %>
    </p>
    
    <p>
      <strong>Time block:</strong>
      <%= @course.time_block %>
    </p>
    
    <p>
      <strong>Age group:</strong>
      <%= @course.age_group %>
    </p>
    
    <p>
      <strong>Max students:</strong>
      <%= @course.max_students %>
    </p>
    
    <p>
      <strong>Fee:</strong>
      <%= number_to_currency(@course.fee) %>
    </p>
  </div>
</div>
<% if current_user.role == 'admin' %>
  <p><strong>Delete Course?</strong>
    <%= link_to 'Delete', [@course], method: :delete, class: 'btn btn-danger' %>
  </p><br>
  <%= link_to 'Edit', edit_course_path(@course) %> |
<% end %>

