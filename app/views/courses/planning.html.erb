<h1>Proposed Classes</h1>
<h5><%=link_to "Tiny", :anchor => 'tiny_table' %> | <%=link_to "Small", :anchor => 'small_table' %>  
  | <%=link_to "Medium", :anchor => 'medium_table' %> | <%=link_to "Big", :anchor => 'big_table' %></h5>
<div id='tiny_table'>
    <h2>Tiny</h2>
    <table id='tiny_courses' class="stripe order-column hover" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Age group</th>
          <th>Time block</th>
          <th>Title</th>
          <th>Instructor</th>
          <th>Max students</th>
          <th>Openings</th>
          <th>Fee</th>
          <th>More Info</th>
        </tr>
      </thead>
      <tbody>
        <% @tiny_courses.each do |course| %>
          <tr>
            <td><%= course.age_group %></td>
            <td><%= best_in_place course, :time_block, :as => :select, :collection => [["10:00 am", "10:00 am"], ["11:00 am", "11:00 am"], ["1:00 pm", "1:00 pm"]] %></td>
            <td><%= best_in_place course, :title, :as => :input %></td>
            <td><%= course.user.name %></td>
            <td><%= course.max_students %></td>
            <td><%= course.openings %></td>
            <td><%= number_to_currency(course.fee) %></td>
            <td><%= link_to 'Description ', course %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div><br><br><br><br>


