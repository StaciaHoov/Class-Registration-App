<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Instructor</th>
      <th>Title</th>
      <th>Time block</th>
      <th>Age group</th>
      <th>Max students</th>
      <th>Fee</th>
      <th>Openings</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% if @courses %>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.user.name unless course.user.nil? %></td>
          <td><%= course.title %></td>
          <td><%= course.time_block %></td>
          <td><%= course.age_group %></td>
          <td><%= course.max_students %></td>
          <td><%= number_to_currency(course.fee) %></td>
          <td><%= course.openings %></td>
          <td><%= link_to 'More info ', course %></td>
          <% if current_user.admin? %>
            <td><%= link_to 'Delete', course, method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
   
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-success' %>
