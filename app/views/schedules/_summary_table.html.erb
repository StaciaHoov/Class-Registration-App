<h3 class="preview">Courses Offered</h3>
<div class="table-responsive">
    <table class="table table-bordered .table-condensed">
        <tr>
            <th>First Block</th>
            <th>Age</th>
            <th>Status</th>
            <th>Details</th>
            <th>Wait list</th>
            <th>course full</th>
            <th>seats taken</th>
        </tr>
        <% Course.where(time_block: 1).each do |course| %>
        <tr>
            <td><%= course.title %></td>
            <td><%= course.age_group %></td>
            <td><% if course.max_students > course.seats_taken  %>
                    <small>Open (<%= course.max_students - course.seats_taken %> seats)</small>
                <% else %>
                    <small style="color:red">FULL</small>
                <% end %>
            </td>
            <td><%= link_to 'Details', course %></td>
            <td><% if course.course_full = true %>
                    <%= link_to "get on list", new_wait_path(course) %>
                <% end %></td>
            <td><%= course.course_full %></td>
            <td><%= course.seats_taken %></td>
        </tr>
        <% end %>
        
        <tr>
            <th>Second Block</th><th></th><th></th><th></th>
        </tr>
        <% Course.where(time_block: 2).each do |course| %>
        <tr>
            <td><%= course.title %></td>
            <td><%= course.age_group %></td>
            <td><% if course.max_students > course.seats_taken  %>
                    <small>Open (<%= course.max_students - course.seats_taken %> seats)</small>
                <% else %>
                    <small style="color:red">FULL</small>
                <% end %>
            </td>
            <td><%= link_to 'Details', course %></td>
            <td><% if course.course_full = true %>
                    <%= link_to "get on list", new_wait_path(course) %>
                <% end %></td>
        </tr>
        <% end %>
        
        <tr>
            <th>Third Block</th><th></th><th></th><th></th>
        </tr>
        <% Course.where(time_block: 3).each do |course| %>
            <tr>
                <td><%= course.title %></td>
                <td><%= course.age_group %></td>
                <td><% if course.openings > 0  %>
                    <small>Open (<%= course.openings %> seat)</small>
                <% else %>
                    <small style="color:red">FULL</small>
                <% end %>
                </td>
                <td><%= course.course_full %></td>
                <td><%= link_to 'Details', course %></td>
                <td><% if course.max_students > course.seats_taken  %>
                    <small>Open (<%= course.max_students - course.seats_taken %> seats)</small>
                <% end %></td>
            </tr>
        <% end %>
    </table>
</div> 