<!DOCTYPE html>
<html>
<head>
  <title>Belfast Homeschoolers | Course Registration</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Welcome", root_path %></li>
        <% if current_user %>
          <li><%= link_to "Planning", courses_path %></li>
          <li><%= link_to "My Account", user_path(current_user) %></li>
        <% end %>
        
        <div class="pull-right user-info">
          <% if current_user %>
            <p>Hi <%= current_user.name || current_user.email %>! </p>
            <%= link_to user_path(current_user), class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-user"></span>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-log-out"></span>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: 'btn btn-primary btn-sm' do %> 
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
             <%= link_to new_user_session_path, class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-log-in"></span>
            <% end %>
          <% end %>
        </div>
      </ul>
      
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      <br>
      <%= yield %>
      
    </div>
  </body>
</html>
