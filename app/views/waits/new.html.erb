<div class='panel panel-default'>
    <div class='panel-heading'>
        <h1>Wait List for: <br> <%= @course.title %></h1> 
    </div>
                
    <div class='panel-body'>
        <div class="row">
          <div class="col-md-3"></div>
            <div class="col-md-6">
              <%= simple_form_for([@course, @wait]) do |f| %>
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.association :student, label: "Student" %>
                  <%= f.input :course %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Put on Wait list", class: 'btn btn-primary' %>
                </div><br>
              <% end %>
            </div>
        </div>  
    </div>
</div>